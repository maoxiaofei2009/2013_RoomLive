<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true">
    	
        <RelativeLayout 
            android:id="@+id/main_item_photo_area"
            android:layout_width="120dip"
    		android:layout_height="80dip"
    		android:padding="1dip"
    		android:background="@drawable/main_grid_item_background">
	        <ImageView 
	            android:id="@+id/main_item_photo"
	            android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:layout_centerHorizontal="true"
	    		android:scaleType="fitXY"
	    		android:paddingRight="1dip"
	    		android:paddingBottom="1dip"
	    		android:src="@drawable/main_card_thumb_new"
	    		android:background="@drawable/ic_card_shadow"/>
       </RelativeLayout>
        <TextView 
            android:id="@+id/main_item_text"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/main_item_photo_area"
    		android:layout_alignLeft="@+id/main_item_photo_area"
    		android:layout_alignRight="@+id/main_item_photo_area"
    		android:ellipsize="end"
    		android:singleLine="true"
    		android:textStyle="bold"
    		android:gravity="center"
    		android:text="New card"/>
    </RelativeLayout>
    
</RelativeLayout>