<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightblue">

    <RelativeLayout 
        android:id="@+id/card_view"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@color/white"
    	android:layout_centerInParent="true">

	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:visibility="visible">
		    <ImageView 
		        android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:scaleType="fitXY"
		    	android:src="@drawable/ic_sample_card_front_1">
		    </ImageView>
	   	</RelativeLayout>
	
	    
	    <LinearLayout 
			android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:orientation="horizontal"
	    	android:visibility="gone">
		    <RelativeLayout 
		        android:layout_width="0dip"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1">
			    <include layout="@layout/card_postal_code"
			        android:id="@+id/card_postal_code_receiver"/>
			    
			    <LinearLayout 
		            android:layout_width="fill_parent"
		    		android:layout_height="fill_parent"
		    		android:layout_below="@+id/card_postal_code_receiver"
		    		android:layout_marginTop="20dip"
					android:layout_marginLeft="30dip"
					android:layout_marginRight="30dip"
					android:layout_marginBottom="30dip">        
		            <EditText
		                android:id="@+id/card_content"
		                android:layout_width="fill_parent"
		    			android:layout_height="wrap_content"
		    			android:gravity="top"
		    			android:maxLines="10"
		    			android:lines="10"
		    			android:hint="在此添加描述"/>
		            
		       	</LinearLayout>
			</RelativeLayout>
			
		    <RelativeLayout 
		        android:layout_width="0dip"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="1">
		
		        <include layout="@layout/card_stamp"
		            android:id="@+id/card_stamp_area"/>
		
		        
		        <EditText
		            android:id="@+id/card_receiver_address"
		            android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:layout_alignParentLeft="true"
		   			android:layout_below="@+id/card_stamp_area"
		   			android:layout_toLeftOf="@+id/card_stamp_area"
		   			android:gravity="center_vertical"
		   			android:maxLines="1"
		   			android:lines="1"
		   			android:hint="收件人地址："/>
		        
		        <EditText
		            android:id="@+id/card_receiver_name"
		            android:layout_width="fill_parent"
		   			android:layout_height="wrap_content"
		   			android:layout_alignParentLeft="true"
		   			android:layout_below="@+id/card_receiver_address"
		   			android:layout_marginRight="30dip"
		   			android:gravity="center_vertical"
		   			android:maxLines="1"
		   			android:lines="1"
		   			android:hint="收件人姓名："/>
		        
		                    
		        <LinearLayout 
		            android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_alignParentRight="true"
		    		android:layout_alignParentBottom="true"
		    		android:layout_marginBottom="20dip"
		    		android:layout_marginRight="30dip">
		    		
		            <TextView 
		                android:layout_width="wrap_content"
		    			android:layout_height="wrap_content"
		    			android:textStyle="bold"
		    			android:textColor="@android:color/holo_red_light"
		    			android:text="邮编：334770"/>            
		        </LinearLayout>
		    </RelativeLayout>
	    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>